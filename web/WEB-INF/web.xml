<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--登录-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--注册-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--修改密码-->
    <servlet>
        <servlet-name>ChangePwdServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.ChangePwdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChangePwdServlet</servlet-name>
        <url-pattern>/changepasswd</url-pattern>
    </servlet-mapping>

    <!--教师-->
    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.student.TeacherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>

    <!--科目-->
    <servlet>
        <servlet-name>SubjectServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.student.SubjectServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SubjectServlet</servlet-name>
        <url-pattern>/subject</url-pattern>
    </servlet-mapping>

    <!--试卷-->
    <servlet>
        <servlet-name>ExamServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.student.ExamServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExamServlet</servlet-name>
        <url-pattern>/exam</url-pattern>
    </servlet-mapping>

    <!--交卷-->
    <servlet>
        <servlet-name>SubmitPaper</servlet-name>
        <servlet-class>com.example.learn.servlet.student.SubmitPaper</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SubmitPaper</servlet-name>
        <url-pattern>/submitpaper</url-pattern>
    </servlet-mapping>

    <!--上传-->
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.UploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <!--管理课件-->
    <servlet>
        <servlet-name>CoursewareServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.admin.CoursewareServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CoursewareServlet</servlet-name>
        <url-pattern>/courseware</url-pattern>
    </servlet-mapping>

    <!--删除课件-->
    <servlet>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.admin.DeleteCourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <url-pattern>/deletecourse</url-pattern>
    </servlet-mapping>

    <!--用户信息-->
    <servlet>
        <servlet-name>UserInfoServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.admin.UserInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserInfoServlet</servlet-name>
        <url-pattern>/userinfo</url-pattern>
    </servlet-mapping>

    <!--试题管理-->
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.common.QuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>

    <!--评论-->
    <servlet>
        <servlet-name>CommentsServlet</servlet-name>
        <servlet-class>com.example.learn.servlet.CommentsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommentsServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
</web-app>